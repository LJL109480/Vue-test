@import "reset.css"
@import "mixins.styl"


htm,body
  height 100%
  width: 100%
  overflow hidden
  #app
    width: 100%
    height 100%
    position relative
    .content
      height: 100%
      section
        width: 100%
        height: 100%
        position absolute
        top: 0
        left 0
        display none
        overflow hidden
        padding-bottom 50px
        box-sizing border-box
        &.on
          display block
        &#takeOut
          .header
            width 100%
            height 40px
            background-color #02a774
            line-height 40px
            color: white
            .clickLogin
              color #d6f1e9
              font-size 15px
              padding-left 22px
            .address
              padding-left 28px
              font-size 18px
            .icon-sousuo
              color white
              font-size 22px
              padding-left 16px
          .swiper-container
            .swiper-wrapper
              .swiper-slide
                .list
                  height: 245px
                  padding 0 4px
                  position relative
                  &:after
                    content ''
                    display block
                    width: 100%
                    height 15px
                    background-color: #f5f5f5;
                    position absolute
                    bottom 0
                    left 0
                  li
                    margin-top 8px
                    text-align center
                    width: 25%
                    height: 100px
                    float left
                    img
                      width: 50px
                      height 70px
                    span
                      font-size 14px
            .swiper-pagination
              bottom 18px
          .shopShow
            padding 0 10px 0 14px
            .nearbyShops
              height: 40px
              line-height 40px
              font-size 16px
              .icon-xuanxiang, .nearbyText
                color #a2a2a2
            .shopList
              >li
                margin-top 5px
                height: 90px
                width: 100%
                display flex
                .shopPhoto
                  height: 100%
                  width: 25%
                  img
                    width: 100%
                .shopContent
                  width: 100%
                  .shopName
                    clearFix()
                    .brand
                      font-size 12px
                      font-weight bold
                      border: 1px solid yellow
                      background-color: yellow
                      float left
                      margin-left 5px
                    .name
                      width: 120px
                      height: 20px
                      font-size 20px
                      font-weight bold
                      float left
                      margin-left 5px
                      white-space: nowrap;
                      text-overflow: ellipsis;
                      overflow: hidden;
                    .assure
                      float right
                      span
                        font-size 12px
                        color #ababab
                        border: 1px solid #ababab

                  .stars
                    margin-top 12px
                    .starsList
                      margin-top 4px
                      float left
                      .star
                        width: 10px
                        height: 10px
                        float left
                        background-size 100% 100%
                        &.on
                          bg_image(star_on)
                        &.off
                          bg_image(star_off)
                        &.half
                          bg_image(star_half)
                    .grade
                      margin-left 2px
                      color #ff8942
                      font-size 12px
                    .sales
                      font-size 12px
                      display inline-block
                      transform scale(0.8)
                    .onTime
                      float right
                      .courier
                        font-size 12px
                        color white
                        background-color #02a774
                        border: 1px solid #97dac6
                      .inTime
                        font-size 12px
                        font-weight bold
                        color #0caa79
                        border: 1px solid #97dac6

                  .needMoney
                    margin-top 10px
                    font-size 12px
                    color #ababab
        &#search
          background-color: #f5f5f5
          .header
            width 100%
            height 40px
            background-color #02a774
            line-height 40px
            color: white
            text-align center
            h3
              font-size 20px
            .submit
              width: 100%
              height: 60px
              background-color: #fff;
              text-align center
              line-height 60px
              input
                width: 70%
                height: 36px
                background-color: #f2f2f2
                border-radius 3px
                margin-right 10px
              button
                background-color: #02a774
                height: 36px
                width: 20%
                color white
                outline none
                border none
                font-weight bold
                margin-left  -5px


        &#indent
          .header
            width 100%
            height 40px
            background-color #02a774
            line-height 40px
            color: white
            text-align center
            h3
              font-size 20px
          .login
            width: 100%
            height: 100%
            position relative
            .goLogin
              position absolute
              top: 62%
              left: 50%
              transform translate(-50%, -50%)
              text-align center
              p
                font-size 20px
                color #6c6c6c
              button
                color white
                margin-top 10px
                height: 40px
                width: 90px
                background-color: #02a774
                font-size 14px
                outline none
                border none
                border-radius 3px
        &#mine
          background-color: #f5f5f5
          .header
            width 100%
            height 40px
            background-color #02a774
            line-height 40px
            text-align center
            font-size 20px
            color #f2faf8
            &:after
              content ''
              display block
              width: 100%
              height 2px
              background-color: #93d9c3
              position relative
          .register
            height: 134px
            background-color #02a774
            padding 24px 0 0 12px
            box-sizing border-box
            position relative
            margin-top 2px
            .photo
              img
                height: 90px
                border-radius 50%
                float left
            .loginOrRegister
              float left
              color white
              margin 14px 0 0 18px
              h2
                font-weight bold
                font-size 20px
              span
                font-size 16px
                position relative
                left 20px
                top: 16px
              .icon-shouji
                font-size 40px
                position absolute
                top: 10px
                left: -40px
            .icon-jiantou1
              font-size 12px
              color #9adcc7
              position absolute
              right 16px
              top: 50%
              margin-top -8px
          .myMoney
            background-color: #fff
            display flex
            text-align center
            .money
              flex-grow 1
              height: 80px
              .yellow
                color #ff9900
                font-size 28px
                font-weight bold
                display inline-block
                padding-top 14px
              .red
                color #ff5f3e
                font-size 28px
                font-weight bold
                display inline-block
                padding-top 14px
              .green
                color #6bc30d
                font-size 28px
                font-weight bold
                display inline-block
                padding-top 14px
              p
                margin-top 10px
            .line
              height: 80px
              width: 1px
              background-color: #e6e6e6
              position relative
          .previous
            width: 100%
            height: 15px
            background-color: #f5f5f5

          .feature
            background-color: #fff
            li
              height: 60px
              line-height 60px
              //background-color: skyblue
              position relative
              .leftInfo
                font-size 36px
                color #4fc19e
                position relative
                margin-right 5px
                top:8px
                left: 8px
              .rightInfo
                float right
                font-size 12px
                color #d7d7d7
                position absolute
                top: 10px
                right: 10px
              .line
                width: 90%
                height: 2px
                background-color #f9f9f9
                position absolute
                right: 0
                bottom -10px
                &.boldLine
                  position relative
                  top 5px
                  width: 100%
                  height: 15px
              &.last
                margin-top 16px
        &#login
          text-align center
          .goBack
            position absolute
            top 4px
            left: 6px
            .icon-jiantou2
              font-size 22px
              color #acacac
          h1
            color #02a774
            font-size 45px
            font-weight bold
            margin 80px 0 50px 0
          .form
            position relative
            .loginMode.active
              color #02a774
              border-bottom 3px solid #22b286
            >div
              display none
            div.on
              display block
              input
                margin-top 12px
                width: 80%
                height: 52px
                border: 2px solid #f3f3f3
                border-radius 2px
              .verify
                position absolute
                top: 50px
                right: 14%
                color #d1d1d1
              .deal
                width: 82%
                margin 20px auto 0
                a
                  color #02a774
          .login
            margin-top 38px
            .aboutUs
              margin-top 16px
              font-size 14px
            button
              color white
              outline none
              border none
              background-color: #4cd96f
              width: 80%
              height: 48px
              border-radius 5px
              font-size 18px
        &#oldUserLogin
          text-align center
          .goBack
            position absolute
            top 4px
            left: 6px
            .icon-jiantou2
              font-size 22px
              color #acacac
          h1
            color #02a774
            font-size 45px
            font-weight bold
            margin 80px 0 50px 0
          .form
            position relative
            .loginMode.active
              color #02a774
              border-bottom 3px solid #22b286
            input
              margin-top 12px
              width: 80%
              height: 52px
              border: 2px solid #f3f3f3
              border-radius 2px
            .verify
              position absolute
              top: 50px
              right: 14%
              color #d1d1d1
          .deal
            width: 82%
            margin 10px auto 0
            a
              color #02a774
          .login
            margin-top 38px
            .aboutUs
              margin-top 16px
              font-size 14px
            button
              color white
              outline none
              border none
              background-color: #4cd96f
              width: 80%
              height: 48px
              border-radius 5px
              font-size 18px
    .footer
      height: 50px
      width: 100%
      background-color: #fff
      margin-top -50px
      position relative
      display flex
      &::before
        content ''
        display block
        width: 100%
        height 1px
        background-color: #f6f6f6;
        position absolute
        top 0
        left 0
      a
        flex 1
        display flex
        flex-direction column
        justify-content space-around
        align-items center
        &.active
          color: #02a774
        .iconfont
          font-size 18px
        .footerText
          font-size 14px